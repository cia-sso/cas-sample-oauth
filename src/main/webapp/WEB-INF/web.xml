<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

<!--
   <context-param>
       <param-name>renew</param-name>
       <param-value>true</param-value>
   </context-param>
-->

    <filter>
        <filter-name>oauth Authentication Filter</filter-name>
        <!--<filter-class>org.jasig.cas.client.authentication.Saml11AuthenticationFilter</filter-class>-->
        <filter-class>com.ltpc.demo.filter.OAuthLoginFilter</filter-class>
        <init-param>
            <param-name>oauthSerUrl</param-name>
            <param-value>https://cas.example.org:8443/uac</param-value>
        </init-param>
        <init-param>
            <param-name>serverName</param-name>
            <param-value>http://localhost:8083</param-value>
        </init-param>
        <init-param>
            <param-name>clientId</param-name>
            <param-value>http://localhost:8083</param-value>
        </init-param>
        <init-param>
            <param-name>clientSecret</param-name>
            <param-value>234wesdfIWER</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>oauth Authentication Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>
            index.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
